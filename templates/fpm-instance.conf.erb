[<%= @name %>]
<% @options.sort.map do |k,v| -%>
<%   if v.is_a?(String) -%>
<%= k %> = <%= v %>
<%   end -%>
<% end -%>

<% @options.sort.map do |k,v| -%>
<%   if v.is_a?(Hash) -%>
<%     v.sort.map do |ki, vi| -%>
<%= k %>[<%= ki %>] = <%= vi %>
<%     end %>
<%   end -%>
<% end -%>